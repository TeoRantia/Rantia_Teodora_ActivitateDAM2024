<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Formular"
        android:textAlignment="center"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Nume: "
            android:textSize="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Completeaza nume..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:text="Grupa: "
            android:textSize="20dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Completeaza grupa..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Specializarea: "
            android:textSize="20dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Completeaza specializarea..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Integralist"
            android:textSize="20dp" />

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="DA"></CheckBox>

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="NU"></CheckBox>
    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:text="Trimite" />

</LinearLayout>